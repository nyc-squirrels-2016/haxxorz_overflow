<!DOCTYPE html>
<html>
<head>
  <title>HaxxorzOverflow</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1> <%= link_to "Haxxorz Overflow", root_path%></h1>
    <h4 id = "user_auth">
      <%if logged_in?%>Logged in as <%=link_to current_user.username, current_user%> | <%end%>
      <% if logged_in? %>
        <%= link_to 'logout', logout_path %> | <%= link_to 'Ask a question', new_question_path %>
      <%else%>
        <%= link_to 'register', register_path %> | <%= link_to 'login', login_path %>
      <%end%>
    </h4>
  </header>
<% if flash[:notice] %>
    <div class="notice">
      <ul>
      <% flash[:notice].each do |notice| %>
      <li><%= notice %></li>
      <%end%>
    </ul>
    </div>
  <% end %>
<div id="content_container">
  <%= yield %>
</div>

</body>
</html>
